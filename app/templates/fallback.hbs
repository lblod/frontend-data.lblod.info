	Vragen:
	-	tijd vervormen in iets leesbaar?
	-	tooltips?
	-	is er ook iets als een pagina van wat een "persoon" eigenlijk is?
--}}

<div class="container-flex--scroll">
	<div class="page">
		<div class="region">
			<div class="layout layout--wide">
				{{#if isEmpty}}
					<h1 class="h1 word-break--break-all smaller">Er werden geen relaties of details gevonden over <a href="{{model.subject}}" data-toggle="tooltip" title="Onderwerp" data-content="Onderwerp" data-placement="top">{{model.subject}}</a>.</h1>
				{{else}}

					<div class="grid">
						<div class="col--8-12 col--12-12--s">
							<div class="u-hr region typography u-spacer">
								<h1 class="h1 word-break--break-all smaller">Detailpagina voor <a href="{{model.subject}}" data-toggle="tooltip" title="Onderwerp" data-content="Onderwerp" data-placement="top">{{model.subject}}</a></h1>
								<p class="introduction">Deze pagina geeft informatie over het onderwerp <a href="{{model.subject}}" data-toggle="tooltip" title="Onderwerp" data-content="Onderwerp" data-placement="top" class="word-break--break-all">{{model.subject}}</a> weer, door relaties en details te tonen.</p>
							</div>

							<div class="u-hr region typography u-spacer">
								<div class="grid">
									<div class="col--4-12">
										<div class="placeholder-picture">
										</div>
										<p><i class="fa fa-female"></i> Â°24-07-1989</p>
									</div>
									<div class="col--8-12">
										<h1 class="h1 u-spacer--bottom--tiny word-break--break-all">Detailpagina voor<br><a href="{{model.subject}}" data-toggle="tooltip" title="{{model.subject}} a" data-content="{{model.subject}}" data-placement="top">Voornaam</a> <a href="{{model.subject}}" data-toggle="tooltip" title="{{model.subject}} a" data-content="{{model.subject}}" data-placement="top">Familienaam</a></h1>
									</div>
								</div>
								<div class="region">
									<h2 class="h4 sans-serif u-spacer--none">Mandaat: <a href="#">Burgemeester</a> <a href="#">Berlare</a></h2>
									<iframe width="100%" height="150" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=3.929672241210938%2C50.995283325981084%2C4.046401977539063%2C51.06470168927767&amp;layer=transportmap"></iframe><br/><small><a href="https://www.openstreetmap.org/#map=13/51.0300/3.9880&amp;layers=T" target="_blank"><i class="fa fa-external-link"></i> Bekijk op een grotere kaart</a></small>
								</div>
							</div>

							<h2 class="h2 u-spacer--large">Relaties, eigenschappen en verwijzingen</h2>
							<h3 class="h4 sans-serif u-spacer--tiny word-break--break-all">Directe eigenschappen en relaties van <a href="{{model.subject}}" data-toggle="tooltip" title="{{model.subject}} a" data-content="{{model.subject}}" data-placement="top">onderwerp</a></h3>
							<p class="u-spacer">Directed links.</p>
							{{!-- <h3 class="h4 sans-serif u-spacer--tiny word-break--break-all">Extra informatie over <a href="{{model.subject}}" data-toggle="tooltip" title="{{model.subject}} a" data-content="{{model.subject}}" data-placement="top">label</a></h3> --}}

							<div class="u-spacer--large">
								<table class="data-table data-table--zebra">
								  <thead>
								    <tr>
								      {{!-- <th>subject</th> --}}
								      <th>Eigenschap{{!-- predicate --}}</th>
								      <th>Inhoud{{!-- object --}}</th>
								      <th>Definitie</th>
								    </tr>
								  </thead>
								  <tbody>
			{{!-- 					  	<tr>
								  		<td>
								  			<p>Label</p>
								  			<button class="button button--tiny button--alt">Toon link</button>
								  			<a href="#">Open link</a>
								  		</td>
								  	</tr> --}}
								    {{#each model.triples.directed as |triple|}}
								      <tr>
								        {{!-- <td><Metis::DisplayUri @uri={{triple.subject}} /></td> --}}
								        <td><Metis::DisplayUri @uri={{triple.predicate}} /></td>
								        <td>
								          {{#if (eq triple.object.type "uri")}}
								            <Metis::DisplayUri @uri={{triple.object.value}} />
								          {{else}}
								            {{triple.object.value}}
								          {{/if}}
								        </td>
								        <td>Bijvoorbeeld een persoon in zijn of haar rol als houder van een mandaat.</td>
								      </tr>
								    {{/each}}
								  </tbody>
								</table>
							</div>

							<h3 class="h4 sans-serif u-spacer--tiny">Verwijzingen naar <a href="{{model.subject}}" data-toggle="tooltip" title="{{model.subject}} a" data-content="{{model.subject}}" data-placement="top">onderwerp</a></h3>
							<p class="u-spacer">Inverse links.</p>
							{{!-- <p class="u-spacer--small">{{model.subject}}</p> --}}

							{{#if model.triples.inverse}}
								<div class="u-spacer--large">
									<table class="data-table data-table--zebra">
									  <thead>
									    <tr>
									      {{!-- <th>subject</th> --}}
									      <th>Eigenschap{{!-- predicate --}}</th>
									      <th>Inhoud{{!-- object --}}</th>
									      <th>Definitie</th>
									    </tr>
									  </thead>
									  <tbody>
									    {{#each model.triples.inverse as |triple|}}
									      <tr>
									        {{!-- <td><Metis::DisplayUri @uri={{triple.subject}} /></td> --}}
									        <td><Metis::DisplayUri @uri={{triple.predicate}} /></td>
									        <td><Metis::DisplayUri @uri={{triple.object}} /></td>
									        <td>Bijvoorbeeld een persoon in zijn of haar rol als houder van een mandaat.</td>
									      </tr>
									    {{/each}}
									  </tbody>
									</table>
								</div>
							{{else}}
								<p class="text-fade">Geen verwijzingen gevonden.</p>
							{{/if}}
						</div>
					</div>
				{{/if}}
			</div>
		</div>
	</div>
</div>

{{outlet}}
